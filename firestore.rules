rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Allow anyone to read cat listings
    match /cats/{catId} {
      allow read: if true;
      // Allow any authenticated user to create a new cat listing
      allow create: if request.auth != null;
      // Only allow the original lister to update or delete their listing
      allow update, delete: if request.auth.uid == resource.data.listerId;
    }
  }
}
